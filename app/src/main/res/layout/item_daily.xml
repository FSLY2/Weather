<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    app:cardBackgroundColor="@color/cardGray">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_marginTop="4dp">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvDayDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/lightGreen"
                android:textSize="15sp"
                app:fontFamily="@font/sen"
                tools:text="@string/tomorrow" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/ivIconDay"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_113d" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvTempDay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="8dp"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    app:fontFamily="@font/sen"
                    tools:text="+12" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvHumDay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="8dp"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    app:fontFamily="@font/sen"
                    tools:text="34%" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvWindDay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="8dp"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    app:fontFamily="@font/sen"
                    tools:text="5 m/s" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/ivIconNight"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_116d" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvTempNight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="8dp"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    app:fontFamily="@font/sen"
                    tools:text="+9" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvHumNight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="8dp"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    app:fontFamily="@font/sen"
                    tools:text="10%" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvWindNight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="8dp"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    app:fontFamily="@font/sen"
                    tools:text="15 m/s" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>